<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/white_box">

        <!-- Destination Image -->
        <ImageView
            android:id="@+id/destinationImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Destination Name -->
            <TextView
                android:id="@+id/destinationName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/budget"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Budget: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:id="@+id/glass"
                android:src="@drawable/search"
                android:contentDescription="Explore"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/heart_border"
                android:id="@+id/heart"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:contentDescription="Favourite"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/addtotrips"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/addtrip"/>
        </LinearLayout>

        <!-- Brief Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:paddingTop="4dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <!-- Date Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <!-- Date Input View -->
    <EditText
        android:id="@+id/dateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="dd//mm//yy"
        android:inputType="text"
        android:textSize="20sp" />

</LinearLayout>

        <!-- Other Views like key features, weather info, etc. -->

    </LinearLayout>
</LinearLayout>
